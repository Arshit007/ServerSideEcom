<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
    android:id="@+id/displayLinearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="3dp"
        app:cardBackgroundColor="#F5F5F5"
        app:cardUseCompatPadding="true"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        >



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/order_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:scaleType="center"
                android:textColor="#76FF03"
                android:text="Product Name : "
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:padding="10dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/order_detail_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/order_detail_name"
                android:scaleType="center"

                android:text="Idli"
                android:layout_marginTop="5dp"
                android:textSize="15dp"

                android:padding="10dp"
                android:textStyle="italic|bold" />


            <TextView
                android:id="@+id/order_detail_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:scaleType="center"

                android:textColor="#D84315"
                android:layout_toRightOf="@id/order_detail_product_name"
                android:text="QTY:"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:padding="10dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/order_detail_product_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/order_detail_qty"
                android:scaleType="center"
                android:text="1"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:padding="10dp"
                android:textStyle="italic|bold" />


            <TextView
                android:id="@+id/order_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:scaleType="center"

                android:textColor="@color/colorPrimary"
                android:layout_below="@id/order_detail_product_name"
                android:text="PRICE : Rs "
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:padding="10dp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/order_detail_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_detail_product_name"
                android:layout_toRightOf="@id/order_detail_price"
                android:scaleType="center"
                android:text="100"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:padding="10dp"
                android:textStyle="italic|bold" />




        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>